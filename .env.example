# ==============================================================================
# OpenMOHAA Stats API - Environment Configuration
# ==============================================================================

# Compose Project Name (prefixes all containers/volumes/networks)
COMPOSE_PROJECT_NAME=mohaa-api

# API Configuration
PORT=8080
WORKER_COUNT=8
WORKER_QUEUE_SIZE=50000
WORKER_BATCH_SIZE=1000
WORKER_FLUSH_INTERVAL=1s
JWT_SECRET=production_secret_key_change_this_immediately

# PostgreSQL (OLTP)
POSTGRES_USER=mohaa
POSTGRES_PASSWORD=admin123
POSTGRES_DB=mohaa_stats
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
# Full URL for Go App
POSTGRES_URL=postgres://mohaa:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=disable

# ClickHouse (OLAP)
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DB=mohaa_stats
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=9000
# Full URL for Go App
CLICKHOUSE_URL=clickhouse://${CLICKHOUSE_HOST}:${CLICKHOUSE_PORT}/${CLICKHOUSE_DB}?username=${CLICKHOUSE_USER}&password=${CLICKHOUSE_PASSWORD}

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

